<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%=title%></title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" href="/location-pin.ico" type="image/x-icon">
  <style>

    #map {
      width: 100vw;
      height: 100vh;
    }
  </style>
</head>

<body>
  <div id="map"></div>

  <script>
    const map = L.map("map").setView([-7.93193919, 112.63791958919728], 16);
    L.tileLayer("https://tile.openstreetmap.org/{z}/{x}/{y}.png", {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
    }).addTo(map);

    <% data.forEach(element => { %>
        L.marker([parseFloat("<%=element.latitude%>"), parseFloat("<%=element.longitude%>")]).addTo(map)
        .bindPopup(`
            <div class="space-y-2 p-3 max-w-[200px] text-center">
                <h2 class="text-xl font-bold mb-4"><%=element.name %></h2>

                <%if(element.contact_phone && element.contact_name) {%>
                    <a href="https://wa.me/<%=element.contact_phone%>" target="_blank" class="flex items-center justify-center bg-green-500 text-white rounded-sm px-4 py-2 hover:bg-green-600 text-center">
                        <span class="text-white">WhatsApp (<%=element.contact_name%>)</span>
                    </a>            
                <%}%>

                 <%if(element.instagram) {%>
                    <a href="https://www.instagram.com/<%=element.instagram%>" target="_blank" class="flex items-center justify-center bg-pink-500 text-white rounded-sm px-4 py-2 hover:bg-pink-600 text-center">
                        <span class="text-white">Instagram</span>
                    </a>            
                <%}%>
                
                <a href="/detail/<%=element.id%>" class="flex items-center justify-center bg-blue-500 text-white rounded-sm px-4 py-2 hover:bg-blue-600 text-center">
                    <span class="text-white">Lihat selengkapnya</span>
                </a>
            </div>
            `)
    <% })%>
  </script>
</body>

</html>